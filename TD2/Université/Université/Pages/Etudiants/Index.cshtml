@page
@model Université.Pages.Etudiants.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Nom étudiant: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Etudiant[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etudiant[0].Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etudiant[0].Naissance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etudiant[0].NumeroEtudiant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Etudiant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naissance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroEtudiant)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
